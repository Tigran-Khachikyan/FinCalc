<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customPrimaryMain</item>
        <item name="colorPrimaryDark">@color/customDarkMain</item>
        <item name="colorAccent">@color/customLightMain</item>
    </style>

    <style name="AppThemeCustomLoanActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customPrimaryLoan</item>
        <item name="colorPrimaryDark">@color/customDarkLoan</item>
        <item name="colorAccent">@color/customLightLoan</item>
    </style>

    <style name="AppThemeCustomCurActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customPrimaryCurrency</item>
        <item name="colorPrimaryDark">@color/customDarkCurrency</item>
        <item name="colorAccent">@color/customLightCurrency</item>
    </style>

    <style name="AppThemeCustomDepActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    //Final
    //Loan
    <style name="AppThemeCustomLoan" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LoansPrimary</item>
        <item name="colorPrimaryDark">@color/LoansPrimaryDark</item>
        <item name="colorAccent">@color/LoansPrimaryLight</item>
    </style>

    //Deposit
    <style name="AppThemeCustomDep" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DepPrimary</item>
        <item name="colorPrimaryDark">@color/DepPrimaryDark</item>
        <item name="colorAccent">@color/DepPrimaryLight</item>
    </style>


    <style name="cardViewOptions">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="layoutCardMainButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/cardviewoptionshape</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="textView">
        <item name="android:background">@color/LoansPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="texViewDep" parent="textView">
        <item name="android:background">@color/DepPrimary</item>
    </style>

    <style name="textViewBigMain">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewSmallMain" parent="textViewBigMain">
        <item name="android:layout_width">220dp</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/customLightMain</item>
    </style>

    <style name="textViewInfo">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editTextMainInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="editTextOptional">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="textViewIntroInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="currencyViews" parent="currencyViewsSmall">
        <item name="android:background">@drawable/currencyedittext</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="currencyViewsSmall">
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewDetailIntro" parent="textViewDetailRes">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="textViewDetailRes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvDetailResLoan" parent="textViewDetailRes">
        <item name="android:background">@color/LoansPrimary</item>
    </style>

    <style name="tvDetailResDep" parent="textViewDetailRes">
        <item name="android:background">@color/DepPrimary</item>
    </style>

    <style name="dialCheck">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tvFilter">
        <item name="android:layout_width">0dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:drawableEnd">@mipmap/deposit_logo</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
