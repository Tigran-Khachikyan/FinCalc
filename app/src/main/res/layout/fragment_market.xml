<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rates.market.MarketFragment">


    <!--image-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layImageMarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ivMarket"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@mipmap/image_market"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layCoverMarket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_aqua"
            app:layout_constraintBottom_toBottomOf="@id/ivMarket"
            app:layout_constraintLeft_toLeftOf="@id/ivMarket"
            app:layout_constraintRight_toRightOf="@id/ivMarket"
            app:layout_constraintTop_toTopOf="@id/ivMarket" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/PortPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layImageMarket">

        <!--status-->
        <TextView
            android:id="@+id/tvStatusMarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/WeMakeItEasy"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layIntroCurMarket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvStatusMarket"
            app:layout_constraintBottom_toTopOf="@id/layIntroCryptoMarket">

            <TextView
                android:id="@+id/tvCurMarketLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.65"
                app:layout_constraintTop_toTopOf="@id/tvCurMarketIntro"
                app:layout_constraintBottom_toBottomOf="@id/tvCurMarketIntro"
                app:layout_constraintRight_toLeftOf="@id/tvCurMarketIntro"
                android:text="C"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/PortPrimaryDarkVery"/>

            <TextView
                android:id="@+id/tvCurMarketIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"
                android:text="urrencyasdk jbasdbasssssss"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="@color/PortPrimaryDarkVery"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layIntroCryptoMarket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/layIntroCurMarket"
            app:layout_constraintBottom_toTopOf="@id/layIntroMetalMarket">


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layIntroMetalMarket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/layIntroCryptoMarket"
            app:layout_constraintBottom_toBottomOf="parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>