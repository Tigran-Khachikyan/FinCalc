<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNumber"
        style="@style/texViewLoan"
        app:layout_constraintHorizontal_weight="22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvLoanSumRemain">
    </TextView>

    <TextView
        android:id="@+id/tvLoanSumRemain"
        style="@style/texViewLoan"
        app:layout_constraintHorizontal_weight="76"
        app:layout_constraintLeft_toRightOf="@id/tvNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvLoanSumMonthly">
    </TextView>

    <TextView
        android:id="@+id/tvLoanSumMonthly"
        style="@style/texViewLoan"
        app:layout_constraintHorizontal_weight="68"
        app:layout_constraintLeft_toRightOf="@id/tvLoanSumRemain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvPercentMonthly">
    </TextView>

    <TextView
        android:id="@+id/tvPercentMonthly"
        style="@style/texViewLoan"
        app:layout_constraintHorizontal_weight="64"
        app:layout_constraintLeft_toRightOf="@id/tvLoanSumMonthly"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvCommissionMonthly">
    </TextView>
    <TextView
        android:id="@+id/tvCommissionMonthly"
        style="@style/texViewLoan"
        app:layout_constraintHorizontal_weight="52"
        app:layout_constraintLeft_toRightOf="@id/tvPercentMonthly"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTotalPaymentMonthly">
    </TextView>

    <TextView
        android:id="@+id/tvTotalPaymentMonthly"
        style="@style/texViewLoan"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="80"
        app:layout_constraintLeft_toRightOf="@id/tvCommissionMonthly"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>