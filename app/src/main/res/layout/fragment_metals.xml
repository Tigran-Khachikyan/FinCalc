<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_rates_background"
    tools:ignore="Autofill">

    <!--imageView-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivMetalsMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/final_rates_background"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layInsideImage"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@mipmap/image_metal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/WeMakeItEasy"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layInsideImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--main-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@drawable/final_rates_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMetalsMain">

        <!--options-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layMetalsOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupMetals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="bmbMetalsMenu,tvMetalsDateTime,tvMetalsBaseCur,ivFlagMetal,tvMetalsSortedBy" />


            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmbMetalsMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                app:bmb_buttonEnum="ham"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_3"
                app:bmb_dimColor="@color/BMBdimColor"
                app:bmb_highlightedColor="@android:color/holo_red_dark"
                app:bmb_normalColor="@color/LoansPrimaryLight"
                app:bmb_piecePlaceEnum="piecePlace_dot_3_1"
                app:bmb_shadowRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMetalsDateTime"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:text="03/02/2020 ....."
                android:textColor="@color/MetalsPrimaryLight"
                android:textStyle="italic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMetalsBaseCur"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:text="Base currency  USD"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:textColor="@color/MetalsPrimaryLight"
                android:textStyle="italic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMetalsDateTime" />

            <ImageView
                android:id="@+id/ivFlagMetal"
                android:layout_width="34dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@id/tvMetalsSortedBy"
                app:layout_constraintLeft_toRightOf="@id/tvMetalsBaseCur"
                app:layout_constraintTop_toBottomOf="@id/tvMetalsDateTime" />

            <TextView
                android:id="@+id/tvMetalsSortedBy"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:text="@string/Unit"
                android:gravity="center_vertical"
                android:textColor="@color/MetalsPrimaryLight"
                android:textStyle="italic"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvMetalsBaseCur" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Intro-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layMetalsIntro"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@id/layMetalsOptions">

            <TextView
                android:id="@+id/tvMetalsIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/metals"
                android:textAllCaps="true"
                android:textColor="@color/CurrencyPrimaryLight"
                app:layout_constraintHorizontal_weight="0.35"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvRateIntro" />

            <TextView
                android:id="@+id/tvRateIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/price"
                android:textAllCaps="true"
                android:textColor="@color/CurrencyPrimaryLight"
                app:layout_constraintHorizontal_weight="0.4"
                app:layout_constraintLeft_toRightOf="@id/tvMetalsIntro"
                app:layout_constraintRight_toLeftOf="@id/tvGrowthIntro" />

            <TextView
                android:id="@+id/tvGrowthIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:text="@string/change"
                android:textAllCaps="true"
                android:textColor="@color/CurrencyPrimaryLight"
                app:layout_constraintHorizontal_weight="0.25"
                app:layout_constraintLeft_toRightOf="@id/tvRateIntro"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--rates-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardTablo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layMetalsIntro"
            app:layout_constraintVertical_bias="0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMetals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


