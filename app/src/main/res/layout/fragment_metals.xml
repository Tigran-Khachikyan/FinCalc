<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PortPrimary"
    tools:ignore="Autofill">

    <!--imageView-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivMetalsMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_aqua"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layInsideImage"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@mipmap/image_metals"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_aqua"
            app:layout_constraintBottom_toBottomOf="@id/layInsideImage"
            app:layout_constraintTop_toTopOf="@id/layInsideImage" />

        <TextView
            android:id="@+id/tvStatusMetals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/WeMakeItEasy"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/layInsideImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--main-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/layMetalsHider"
        android:layout_height="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@color/PortPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMetalsMain">

        <!--options-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layMetalsOptions"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnDateMetals"
                style="@style/button_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:lines="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnBaseMetals"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnBaseMetals"
                style="@style/button_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnDateMetals"
                app:layout_constraintRight_toLeftOf="@id/btnUnitMetals"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnUnitMetals"
                style="@style/button_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnBaseMetals"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Intro-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layMetalsIntro"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/PortPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/layMetalsOptions">

            <TextView
                android:id="@+id/tvMetalsIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/metals"
                android:textAllCaps="true"
                android:textColor="@color/PortPrimaryLight"
                app:layout_constraintHorizontal_weight="0.33"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvRateIntro" />

            <TextView
                android:id="@+id/tvRateIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/price"
                android:textAllCaps="true"
                android:textColor="@color/PortPrimaryLight"
                app:layout_constraintHorizontal_weight="0.34"
                app:layout_constraintLeft_toRightOf="@id/tvMetalsIntro"
                app:layout_constraintRight_toLeftOf="@id/tvGrowthIntro" />

            <TextView
                android:id="@+id/tvGrowthIntro"
                style="@style/textViewIntroInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/change"
                android:textAllCaps="true"
                android:textColor="@color/PortPrimaryLight"
                app:layout_constraintHorizontal_weight="0.33"
                app:layout_constraintLeft_toRightOf="@id/tvRateIntro"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--rates-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMetals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layMetalsIntro" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--progressBar-->
    <LinearLayout
        android:id="@+id/progressBarMetalsFr"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvProgLoadMetals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/loading"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


