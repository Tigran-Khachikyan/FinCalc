<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/progressBarDepFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvProgressLoadingCur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/loading"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayoutDepFrag"
        android:visibility="gone"
        android:background="@color/PortPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layInputDepFr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabRemoveDepFr"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:layout_margin="10dp"
                    app:rippleColor="@color/colorAccentDark"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/textViewBigMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/Terms"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvBankDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="match_parent"
                        android:text="@string/bank"
                        app:layout_constraintBottom_toTopOf="@id/tvAmountDepFr"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/tvAmountDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="wrap_content"
                        android:text="@string/Amount"
                        app:layout_constraintBottom_toTopOf="@id/tvTermDepFr"
                        app:layout_constraintTop_toBottomOf="@id/tvBankDepFr" />

                    <ImageView
                        android:id="@+id/ivCurrencyDepFr"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/Currency"
                        app:layout_constraintBottom_toBottomOf="@id/tvAmountDepFr"
                        app:layout_constraintLeft_toRightOf="@id/tvAmountDepFr"
                        app:layout_constraintTop_toTopOf="@id/tvAmountDepFr"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvTermDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="match_parent"
                        android:text="@string/Term_months"
                        app:layout_constraintBottom_toTopOf="@id/tvFreqDepFr"
                        app:layout_constraintTop_toBottomOf="@id/tvAmountDepFr" />

                    <TextView
                        android:id="@+id/tvFreqDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="match_parent"
                        android:text="@string/Frequency"
                        app:layout_constraintBottom_toTopOf="@id/tvRateDepFr"
                        app:layout_constraintTop_toBottomOf="@id/tvTermDepFr" />

                    <TextView
                        android:id="@+id/tvRateDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="match_parent"
                        android:text="@string/Interest_rate"
                        app:layout_constraintBottom_toTopOf="@id/tvCapitalizedDepFr"
                        app:layout_constraintTop_toBottomOf="@id/tvFreqDepFr" />

                    <TextView
                        android:id="@+id/tvCapitalizedDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="wrap_content"
                        android:drawableEnd="@drawable/ic_check"
                        android:paddingEnd="20dp"
                        android:text="@string/Capitalization"
                        app:layout_constraintBottom_toTopOf="@id/tvTaxDepFr"
                        app:layout_constraintLeft_toLeftOf="@id/tvRateDepFr"
                        app:layout_constraintTop_toBottomOf="@id/tvRateDepFr"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvTaxDepFr"
                        style="@style/textViewDetailRes"
                        android:layout_width="match_parent"
                        android:text="@string/Tax"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCapitalizedDepFr" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/layDepResultFrag"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layDepFrResult"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layReportLayDepFr"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/DepPrimaryDark"
                android:padding="4dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvTotalIncomeDep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Income"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tvEffRateDep"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvEffRateDep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/EffectiveRate"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tvTotalIncomeDep"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepFrTotalIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/PortPrimaryLight"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tvDepEffRateResFr"
                    app:layout_constraintTop_toBottomOf="@id/tvTotalIncomeDep" />

                <TextView
                    android:id="@+id/tvDepEffRateResFr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/PortPrimaryLight"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tvDepFrTotalIncome"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvEffRateDep" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layMarginDepFr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/PortPrimaryLight"
                app:layout_constraintTop_toBottomOf="@id/layReportLayDepFr" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDepResultIntro"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/DepPrimaryDark"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/layMarginDepFr">

                <TextView
                    android:id="@+id/tvNumberDepIntro"
                    android:text="N"
                    style="@style/textViewDepReport"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tvDepBalanceIntro"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvDepBalanceIntro"
                    style="@style/textViewDepReport"
                    android:text="@string/BalanceDep"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="7"
                    app:layout_constraintLeft_toRightOf="@id/tvNumberDepIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvDepPercentIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepPercentIntro"
                    style="@style/textViewDepReport"
                    android:text="@string/PercentDep"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toRightOf="@id/tvDepBalanceIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvPercentAfterTaxIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPercentAfterTaxIntro"
                    style="@style/textViewDepReport"
                    android:text="@string/PercentAfterTaxDep"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="8"
                    app:layout_constraintLeft_toRightOf="@id/tvDepPercentIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvDepPaymentIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepPaymentIntro"
                    style="@style/textViewDepReport"
                    android:text="@string/Payment"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="9"
                    app:layout_constraintLeft_toRightOf="@id/tvPercentAfterTaxIntro"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recScheduleDepFr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DepPrimaryLight"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toBottomOf="@id/layDepFrResult" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
