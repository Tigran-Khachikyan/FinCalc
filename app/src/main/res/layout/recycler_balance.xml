<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layRecyclerBalance"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="10dp"
    android:outlineAmbientShadowColor="@android:color/black"
    app:cardBackgroundColor="@color/PortPrimary"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    tools:ignore="UnusedAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layHolder"
        android:background="@drawable/btn_cur_type_selected_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layMainBalHolder"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layIntroBalFr"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:padding="1dp"
                android:layout_height="120dp"
                android:layout_margin="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivRecBalance"
                app:layout_constraintRight_toRightOf="parent">


                <TextView
                    android:id="@+id/tvRecBalanceSum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:layout_margin="1dp"
                    app:layout_constraintVertical_weight="1.75"
                    app:layout_constraintBottom_toTopOf="@id/tvRecBalanceBank"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRecBalanceBank"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_margin="1dp"
                    app:layout_constraintVertical_weight="1.5"
                    app:layout_constraintBottom_toTopOf="@id/tvRecBalanceRate"
                    app:layout_constraintTop_toBottomOf="@id/tvRecBalanceSum" />



                <TextView
                    android:id="@+id/tvRecBalanceRate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_margin="1dp"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    app:layout_constraintVertical_weight="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRecBalanceBank" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/ivRecBalance"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                app:layout_constraintWidth_percent="0.3"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/btn_expand"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/layIntroBalFr"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layBackData"
            android:background="@color/PortPrimaryLight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layMainBalHolder">

            <TextView
                android:id="@+id/tvRecBalanceDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>