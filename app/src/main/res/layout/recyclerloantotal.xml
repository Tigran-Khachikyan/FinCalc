<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTotalIntro"
        style="@style/textView"
        android:text="@string/TOTAL"
        android:textSize="13sp"
        app:layout_constraintHorizontal_weight="100"
        android:layout_height="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/tvTotalSum">
    </TextView>

    <TextView
        android:id="@+id/tvTotalSum"
        style="@style/textView"
        android:textStyle="bold"
        android:layout_height="34dp"
        app:layout_constraintHorizontal_weight="68"
        app:layout_constraintLeft_toRightOf="@id/tvTotalIntro"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/tvTotalPercent">
    </TextView>

    <TextView
        android:id="@+id/tvTotalPercent"
        style="@style/textView"
        android:layout_height="34dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="64"
        app:layout_constraintLeft_toRightOf="@id/tvTotalSum"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/tvTotalCommission">
    </TextView>
    <TextView
        android:id="@+id/tvTotalCommission"
        style="@style/textView"
        android:textStyle="bold"
        android:layout_height="34dp"
        app:layout_constraintHorizontal_weight="52"
        app:layout_constraintLeft_toRightOf="@id/tvTotalPercent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/tvTotalPayment">
    </TextView>

    <TextView
        android:id="@+id/tvTotalPayment"
        style="@style/textView"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_height="34dp"
        app:layout_constraintHorizontal_weight="80"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/tvTotalCommission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>