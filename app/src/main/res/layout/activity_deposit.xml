<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dep.DepositActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDep"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/PortPrimaryDark"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/depositCalculator"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@mipmap/consultants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layDepInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/DepPrimary"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--imageView-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ivDepImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/image_savings_main"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layCoverDep"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_violet"
            app:layout_constraintBottom_toBottomOf="@id/ivDepImage"
            app:layout_constraintLeft_toLeftOf="@id/ivDepImage"
            app:layout_constraintRight_toRightOf="@id/ivDepImage"
            app:layout_constraintTop_toTopOf="@id/ivDepImage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/WeMakeItEasy"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivDepImage" />

        <!--recycler-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDepResult"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/DepPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvResultDepIntro"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="start"
                android:paddingStart="4dp"
                android:text="@string/Report"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutDepResultIntro"
                tools:ignore="RtlSymmetry" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDepResultIntro"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/final_input_frame"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvResultDepIntro">

                <TextView
                    android:id="@+id/tvNumberDepIntro"
                    style="@style/textView"
                    android:layout_height="wrap_content"
                    android:background="@color/DepPrimary"
                    android:text="N"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tvDepBalanceIntro"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvDepBalanceIntro"
                    style="@style/textView"
                    android:layout_height="wrap_content"
                    android:background="@color/DepPrimary"
                    android:text="@string/BalanceDep"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="9"
                    app:layout_constraintLeft_toRightOf="@id/tvNumberDepIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvDepPercentIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepPercentIntro"
                    style="@style/textView"
                    android:layout_height="wrap_content"
                    android:background="@color/DepPrimary"
                    android:text="@string/PercentDep"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="7"
                    app:layout_constraintLeft_toRightOf="@id/tvDepBalanceIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvPercentAfterTaxIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPercentAfterTaxIntro"
                    style="@style/textView"
                    android:layout_height="wrap_content"
                    android:background="@color/DepPrimary"
                    android:text="@string/PercentAfterTaxDep"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="7"
                    app:layout_constraintLeft_toRightOf="@id/tvDepPercentIntro"
                    app:layout_constraintRight_toLeftOf="@id/tvDepPaymentIntro"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepPaymentIntro"
                    style="@style/textView"
                    android:layout_height="wrap_content"
                    android:background="@color/DepPrimary"
                    android:text="@string/Payment"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintLeft_toRightOf="@id/tvPercentAfterTaxIntro"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDep"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                app:layout_constraintTop_toBottomOf="@id/layoutDepResultIntro" />


            <TextView
                android:id="@+id/tvEffectRateDepShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/recyclerDep" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_AddDep"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/ic_save" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--mandatory-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDepMandatoryInput"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintBottom_toTopOf="@id/layoutDepOptionalInput">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepAmount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintBottom_toTopOf="@id/cardDepTerm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tvDepInputSumIntro"
                    style="@style/textViewIntroInput"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:drawableEnd="@drawable/ic_star_black_24dp"
                    android:text="@string/Amount"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etSumDep"
                    style="@style/editTextMainInput"
                    android:layout_width="0dp"
                    android:hint="@string/HintAmount"
                    android:inputType="number"
                    android:maxLength="9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivLogoDepSum"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLogoDepSum"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:src="@mipmap/money"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepTerm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/cardDepRate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDepAmount"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tvRateIntro"
                    style="@style/textViewIntroInput"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:drawableEnd="@drawable/ic_star_black_24dp"
                    android:text="@string/Interest_rate"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etRateDep"
                    style="@style/editTextMainInput"
                    android:layout_width="0dp"
                    android:hint="@string/HintRate"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivLogoDepRate" />

                <ImageView
                    android:id="@+id/ivLogoDepRate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:src="@mipmap/percentage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.75" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepRate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cardDepTerm"
                app:layout_constraintTop_toBottomOf="@id/cardDepAmount"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tvTermIntro"
                    style="@style/textViewIntroInput"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:drawableEnd="@drawable/ic_star_black_24dp"
                    android:text="@string/Term_months"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etTermDep"
                    style="@style/editTextMainInput"
                    android:layout_width="0dp"
                    android:hint="@string/HintTerm"
                    android:inputType="number"
                    android:maxLength="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivLogoDepTerm" />

                <ImageView
                    android:id="@+id/ivLogoDepTerm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:src="@mipmap/hourglass"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--optional-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDepOptionalInput"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/layEmptyContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepPeriod"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/cardDepCapitalization"
                app:layout_constraintRight_toRightOf="parent">


                <TextView
                    android:id="@+id/tvPeriodDepIntro"
                    style="@style/textViewIntroInput"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:text="@string/Frequency"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnMonthly"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/final_btnexpand"
                    android:text="@string/MonthlyPaymentDep"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/btnQuarterly"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPeriodDepIntro"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintWidth_percent="0.75" />

                <Button
                    android:id="@+id/btnQuarterly"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/final_btnexpand"
                    android:text="@string/QuarterlyPaymentDep"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/btnEndOfPeriod"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnMonthly"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintWidth_percent="0.75" />

                <Button
                    android:id="@+id/btnEndOfPeriod"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/final_btnexpand"
                    android:text="@string/AtTheEndPayment"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnQuarterly"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintWidth_percent="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepCapitalization"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintBottom_toTopOf="@id/cardDepTax"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cardDepPeriod"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tvCapitalizationIntro"
                    style="@style/textViewIntroInput"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:labelFor="@id/checkBoxCapitalized"
                    android:text="@string/Capitalization"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Switch
                    android:id="@+id/checkBoxCapitalized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55" />

                <ImageView
                    android:id="@+id/ivLogoDepCapitalization"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:src="@mipmap/capitalization"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepRepl"
                    style="@style/textViewIntroInput"
                    android:layout_marginBottom="4dp"
                    android:labelFor="@id/checkBoxCapitalized"
                    android:text="@string/withCapitalizing"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDepTax"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_input_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cardDepPeriod"
                app:layout_constraintTop_toBottomOf="@id/cardDepCapitalization"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tvTaxIntro"
                    style="@style/textViewIntroInput"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:text="@string/Tax"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etTaxDep"
                    style="@style/editTextMainInput"
                    android:layout_width="100dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="8dp"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:text="10.0"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/ivLogoDepTax"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:src="@mipmap/tax"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDepTax"
                    style="@style/textViewIntroInput"
                    android:layout_marginBottom="4dp"
                    android:text="@string/taxRegulation"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--margin-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layEmptyContainer"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintBottom_toTopOf="@id/layoutDepButtons" />

        <!--buttons-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDepButtons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnExpandDep"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/final_btnexpand"
                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                android:text="@string/AdvancedCalculation"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnClearDep"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnClearDep"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/final_btnclear"
                android:text="@string/Clear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@id/btnExpandDep"
                app:layout_constraintRight_toLeftOf="@id/btnCalculateDep"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnCalculateDep"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/final_btncalculate"
                android:text="@string/Calculate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintLeft_toRightOf="@id/btnClearDep"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>