<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="Autofill">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--imageView-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ivCurrencyMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layInsideImage"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@mipmap/currencyimagemain"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:text="@string/WeMakeItEasy"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/layInsideImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <!--main-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/currinputbackground">


            <!--Tablo-->
            <LinearLayout
                android:id="@+id/cardViewLiveCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/final_input_frame"
                android:orientation="vertical"
                android:padding="4dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvTableDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/CurrencyPrimaryLight"
                    android:textStyle="bold|italic" />
                <!--Intro-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurIntro"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/Currency"
                        android:textColor="@color/CurrencyPrimaryLight"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateIntro" />

                    <TextView
                        android:id="@+id/tvRateIntro"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rate"
                        android:textColor="@color/CurrencyPrimaryLight"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurIntro"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthIntro" />

                    <TextView
                        android:id="@+id/tvGrowthIntro"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintHorizontal_weight="0.65"
                        app:layout_constraintLeft_toRightOf="@id/tvRateIntro"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--USD-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurUSD"
                        style="@style/CurText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateUSD" />

                    <TextView
                        android:id="@+id/tvRateUSD"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurUSD"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthUSD" />

                    <TextView
                        android:id="@+id/tvGrowthUSD"
                        style="@style/CurText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_arrow_drop_down_black_24dp"
                        app:layout_constraintLeft_toRightOf="@id/tvRateUSD"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--EUR-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurEUR"
                        style="@style/CurText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateEUR" />

                    <TextView
                        android:id="@+id/tvRateEUR"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurEUR"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthEUR" />

                    <TextView
                        android:id="@+id/tvGrowthEUR"
                        style="@style/CurText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_arrow_drop_up_black_24dp"
                        app:layout_constraintLeft_toRightOf="@id/tvRateEUR"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--GBP-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurGBP"
                        style="@style/CurText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateGBP" />

                    <TextView
                        android:id="@+id/tvRateGBP"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurGBP"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthGBP" />

                    <TextView
                        android:id="@+id/tvGrowthGBP"
                        style="@style/CurText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_arrow_drop_up_black_24dp"
                        app:layout_constraintLeft_toRightOf="@id/tvRateGBP"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--CNY-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurCNY"
                        style="@style/CurText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateCNY" />

                    <TextView
                        android:id="@+id/tvRateCNY"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurCNY"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthCNY" />

                    <TextView
                        android:id="@+id/tvGrowthCNY"
                        style="@style/CurText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_arrow_drop_down_black_24dp"
                        app:layout_constraintLeft_toRightOf="@id/tvRateCNY"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--RUR-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tvCurRUB"
                        style="@style/CurText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvRateRUB" />

                    <TextView
                        android:id="@+id/tvRateRUB"
                        style="@style/textViewBigMain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.1"
                        app:layout_constraintLeft_toRightOf="@id/tvCurRUB"
                        app:layout_constraintRight_toLeftOf="@id/tvGrowthRUB" />

                    <TextView
                        android:id="@+id/tvGrowthRUB"
                        style="@style/CurText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_arrow_drop_down_black_24dp"
                        app:layout_constraintLeft_toRightOf="@id/tvRateRUB"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--choose currency-->
                <Button
                    android:id="@+id/btnResetBaseCurrency"
                    android:layout_width="match_parent"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/final_btnreset_currency"
                    android:text="@string/resetBaseCurrency"
                    android:textColor="@color/CurrencyPrimaryLight"
                    android:padding="2dp"/>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutCurrencyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardViewLiveCurrency"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="7"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="?attr/actionBarSize"
                android:background="@drawable/final_input_frame"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tvCurrencyMainIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Currency_Live"
                    android:textColor="@color/CurrencyPrimaryLight"
                    style="@style/textViewBigMain"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvCurrencyMainIntro">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/conLayCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/btnCalendarDate"
                            style="@style/currencyViews"
                            android:layout_height="match_parent"
                            android:background="@drawable/currlatestunselected"
                            android:drawableEnd="@mipmap/calender"
                            android:hint="@string/ChooseDate"
                            app:layout_constraintHorizontal_weight="16"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/btnCalendarNow" />

                        <Button
                            android:id="@+id/btnCalendarNow"
                            style="@style/currencyViews"
                            android:layout_height="match_parent"
                            android:background="@drawable/currlatestselected"
                            android:hint="@string/Current_Rate"
                            android:text="@string/Current_Rate"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="10"
                            app:layout_constraintLeft_toRightOf="@id/btnCalendarDate"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/conLay1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/conLayCalendar">

                        <Spinner
                            android:id="@+id/spinner1"
                            style="@style/currencyViews"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="10"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/icTransfer"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/icTransfer"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@mipmap/transfer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/spinner1"
                            app:layout_constraintRight_toLeftOf="@id/spinner2"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="ContentDescription" />

                        <Spinner
                            android:id="@+id/spinner2"
                            style="@style/currencyViews"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="10"
                            app:layout_constraintLeft_toRightOf="@id/icTransfer"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/conLay2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/conLay1">

                        <TextView
                            android:id="@+id/tvCurResult"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:textColorHint="@color/CurrencyPrimaryLight"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/etAmountInput"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginEnd="4dp" />

                        <EditText
                            android:id="@+id/etAmountInput"
                            style="@style/currencyViews"
                            android:layout_height="match_parent"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/CurrencyPrimaryLight"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/tvCurResult"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/conLayCurRes"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/conLay2">

                        <TextView
                            android:id="@+id/tvCurResultBig"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:textColorHint="@color/CurrencyPrimaryLight"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
