<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDep"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customDarkCurrency"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/consultants"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:text="@string/currencyConverter"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivCurrencyMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@mipmap/currencyimagemain"
        app:layout_constraintBottom_toTopOf="@id/layoutCurrencyInput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCurrencyInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/currinputbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCurrencyMain"
        app:layout_constraintVertical_weight="7">

        <TextView
            android:id="@+id/tvCurrencyMainIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Currency_Live"
            android:textColor="@color/customLightCurrency"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCurrencyMainIntro">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conLayCalendar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/conLay1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1">

                <Button
                    android:id="@+id/btnCalendarDate"
                    style="@style/currencyViews"
                    android:background="@drawable/currlatestunselected"
                    android:layout_height="match_parent"
                    android:drawableEnd="@mipmap/calender"
                    android:hint="@string/ChooseDate"
                    app:layout_constraintHorizontal_weight="16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btnCalendarNow" />

                <Button
                    android:id="@+id/btnCalendarNow"
                    style="@style/currencyViews"
                    android:background="@drawable/currlatestselected"
                    android:textSize="24sp"
                    android:layout_height="match_parent"
                    android:hint="@string/Current_Rate"
                    android:text="@string/Current_Rate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintLeft_toRightOf="@id/btnCalendarDate"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conLay1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/conLay2"
                app:layout_constraintTop_toBottomOf="@id/conLayCalendar"
                app:layout_constraintVertical_weight="1">

                <EditText
                    android:id="@+id/etAmount1"
                    style="@style/currencyViews"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/customLightCurrency"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/spinner1"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner1"
                    style="@style/currencyViews"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintLeft_toRightOf="@id/etAmount1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conLay2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/conLay1"
                app:layout_constraintVertical_weight="1">

                <EditText
                    android:id="@+id/etAmount2"
                    style="@style/currencyViews"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="16"
                    android:textColorHint="@color/customLightCurrency"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/spinner2"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner2"
                    style="@style/currencyViews"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintLeft_toRightOf="@id/etAmount2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>