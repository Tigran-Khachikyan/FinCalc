<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.loan.LoanActivity"
    tools:ignore="Autofill">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/customPrimaryLoan"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@mipmap/portfolio_logo" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <!--main-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--loans-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutLoansBalFr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layShowLoansBalFr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/layLoansMenuBalFr"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center"
                        android:text="@string/Loans"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <com.nightonke.boommenu.BoomMenuButton
                        android:id="@+id/bmbLoansMenuBalFr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:visibility="visible"
                        app:bmb_buttonEnum="ham"
                        app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                        app:bmb_highlightedColor="@android:color/holo_green_light"
                        app:bmb_normalColor="@android:color/transparent"
                        app:bmb_piecePlaceEnum="piecePlace_dot_4_2"
                        app:bmb_shadowRadius="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/layLoansMenuBalFr"
                        app:layout_constraintEnd_toEndOf="@id/layLoansMenuBalFr"
                        app:layout_constraintTop_toTopOf="@id/layLoansMenuBalFr" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/layLoansMenuBalFr">

                        <TextView
                            android:id="@+id/tvLoanTypeFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/selectedType"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tvLoanCurFilterBalFr"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvLoanCurFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/selectedCurrency"
                            app:layout_constraintLeft_toRightOf="@id/tvLoanTypeFilterBalFr"
                            app:layout_constraintRight_toLeftOf="@id/tvLoanSortFilterBalFr"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvLoanSortFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/sortedByInterestRate"
                            app:layout_constraintLeft_toRightOf="@id/tvLoanCurFilterBalFr"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerLoanBalanceFr"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/layoutFilter" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabRecBalanceAddLoan"
                    style="@style/Widget.Design.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_add_black_24dp"
                    app:elevation="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layShowLoansBalFr"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layShowLoansBalFr" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Line-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layLineDist"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/layoutLoansBalFr" />

            <!--dep-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDepBalFr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="200dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layLineDist">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layShowDepBalFr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/layDepMenuBalFr"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center"
                        android:text="@string/Deposits"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <com.nightonke.boommenu.BoomMenuButton
                        android:id="@+id/bmbDepMenuBalFr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:visibility="visible"
                        app:bmb_buttonEnum="ham"
                        app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                        app:bmb_highlightedColor="@android:color/holo_green_light"
                        app:bmb_normalColor="@android:color/transparent"
                        app:bmb_piecePlaceEnum="piecePlace_dot_4_2"
                        app:bmb_shadowRadius="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/layDepMenuBalFr"
                        app:layout_constraintEnd_toEndOf="@id/layDepMenuBalFr"
                        app:layout_constraintTop_toTopOf="@id/layDepMenuBalFr" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutFilterDep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/layDepMenuBalFr">

                        <TextView
                            android:id="@+id/tvDepTypeFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/selectedType"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tvDepCurFilterBalFr"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDepCurFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/selectedCurrency"
                            app:layout_constraintLeft_toRightOf="@id/tvDepTypeFilterBalFr"
                            app:layout_constraintRight_toLeftOf="@id/tvDepSortFilterBalFr"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDepSortFilterBalFr"
                            style="@style/tvFilter"
                            android:text="@string/sortedByInterestRate"
                            app:layout_constraintLeft_toRightOf="@id/tvDepCurFilterBalFr"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDepBalanceFr"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/layoutFilterDep" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabRecBalanceAddDep"
                    style="@style/Widget.Design.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_add_black_24dp"
                    app:elevation="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layShowDepBalFr"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layShowDepBalFr" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
