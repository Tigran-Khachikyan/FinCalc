<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DepPrimaryLight"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".ui.dep.DepScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_violet"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDepResultIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/Report"
            android:textColor="@color/PortPrimaryLight"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layDepReportLay"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="14dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDepResultIntro">

            <TextView
                android:id="@+id/tvTotalIncomeDep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Income"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvEffRateDep"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEffRateDep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/EffectiveRate"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/tvTotalIncomeDep"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotalIncomeResDep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6504000"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="26sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvEffRateResDep"
                app:layout_constraintTop_toBottomOf="@id/tvTotalIncomeDep" />

            <TextView
                android:id="@+id/tvEffRateResDep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15.62%"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="26sp"
                app:layout_constraintLeft_toRightOf="@id/tvTotalIncomeResDep"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEffRateDep" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDepResultIntro"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/PortPrimaryDark"
            android:orientation="horizontal"
            android:padding="1dp"
            app:layout_constraintTop_toBottomOf="@id/layDepReportLay">

            <TextView
                android:id="@+id/tvNumberDepIntro"
                style="@style/texViewLoanReport"
                android:text="N"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvDepBalanceIntro"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvDepBalanceIntro"
                style="@style/texViewLoanReport"
                android:text="@string/Loan_Balance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintLeft_toRightOf="@id/tvNumberDepIntro"
                app:layout_constraintRight_toLeftOf="@id/tvDepPercentIntro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDepPercentIntro"
                style="@style/texViewLoanReport"
                android:text="@string/Percent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="8"
                app:layout_constraintLeft_toRightOf="@id/tvDepBalanceIntro"
                app:layout_constraintRight_toLeftOf="@id/tvPercentAfterTaxIntro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPercentAfterTaxIntro"
                style="@style/texViewLoanReport"
                android:text="@string/PercentAfterTaxDep"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="8"
                app:layout_constraintLeft_toRightOf="@id/tvDepPercentIntro"
                app:layout_constraintRight_toLeftOf="@id/tvDepPaymentIntro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDepPaymentIntro"
                style="@style/texViewLoanReport"
                android:text="@string/Payment"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="9"
                app:layout_constraintLeft_toRightOf="@id/tvPercentAfterTaxIntro"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDepReport"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDepResultIntro" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSaveDep"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_save" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>