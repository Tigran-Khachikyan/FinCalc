<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="Autofill">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frameForFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--image-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ivPortImage"
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:background="@mipmap/image_portfolio"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layCoverPort"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_aqua"
                    app:layout_constraintBottom_toBottomOf="@id/ivPortImage"
                    app:layout_constraintLeft_toLeftOf="@id/ivPortImage"
                    app:layout_constraintRight_toRightOf="@id/ivPortImage"
                    app:layout_constraintTop_toTopOf="@id/ivPortImage" />

                <TextView
                    android:id="@+id/tvStatusPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/WeMakeItEasy"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@id/ivPortImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!--main-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--loans-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layLoansPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/PortPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layShowLoansPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvLoanHeader"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center"
                        android:text="@string/Loans"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <com.nightonke.boommenu.BoomMenuButton
                        android:id="@+id/bmbLoansMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:visibility="visible"
                        app:bmb_buttonEnum="ham"
                        app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                        app:bmb_highlightedColor="@android:color/holo_green_light"
                        app:bmb_normalColor="@android:color/transparent"
                        app:bmb_piecePlaceEnum="piecePlace_dot_4_2"
                        app:bmb_shadowRadius="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvLoanHeader"
                        app:layout_constraintEnd_toEndOf="@id/tvLoanHeader"
                        app:layout_constraintTop_toTopOf="@id/tvLoanHeader" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:layout_constraintTop_toBottomOf="@id/tvLoanHeader">

                        <TextView
                            android:id="@+id/tvLoanTypeFilter"
                            style="@style/tvFilter"
                            android:text="@string/selectedType"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tvLoanCurFilter"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvLoanCurFilter"
                            style="@style/tvFilter"
                            android:text="@string/selectedCurrency"
                            app:layout_constraintLeft_toRightOf="@id/tvLoanTypeFilter"
                            app:layout_constraintRight_toLeftOf="@id/tvLoanSortFilter"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvLoanSortFilter"
                            style="@style/tvFilter"
                            android:text="@string/sortedByInterestRate"
                            app:layout_constraintLeft_toRightOf="@id/tvLoanCurFilter"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recLoanPort"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/layoutFilter" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAddLoan"
                    style="@style/Widget.Design.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_add_black_24dp"
                    app:elevation="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layShowLoansPort"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layShowLoansPort" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Line-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layLineDist"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/layLoansPort">

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--dep-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layDepPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/PortPrimary"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layLineDist">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layShowDepPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvDepHeader"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center"
                        android:text="@string/Deposits"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <com.nightonke.boommenu.BoomMenuButton
                        android:id="@+id/bmbDepMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:visibility="visible"
                        app:bmb_buttonEnum="ham"
                        app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                        app:bmb_highlightedColor="@android:color/holo_green_light"
                        app:bmb_normalColor="@android:color/transparent"
                        app:bmb_piecePlaceEnum="piecePlace_dot_4_2"
                        app:bmb_shadowRadius="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvDepHeader"
                        app:layout_constraintEnd_toEndOf="@id/tvDepHeader"
                        app:layout_constraintTop_toTopOf="@id/tvDepHeader" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layFilterDep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:layout_constraintTop_toBottomOf="@id/tvDepHeader">

                        <TextView
                            android:id="@+id/tvDepTypeFilter"
                            style="@style/tvFilter"
                            android:text="@string/selectedFreq"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tvDepCurFilter"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDepCurFilter"
                            style="@style/tvFilter"
                            android:text="@string/selectedCurrency"
                            app:layout_constraintLeft_toRightOf="@id/tvDepTypeFilter"
                            app:layout_constraintRight_toLeftOf="@id/tvDepSortFilter"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDepSortFilter"
                            style="@style/tvFilter"
                            android:text="@string/sortedByInterestRate"
                            app:layout_constraintLeft_toRightOf="@id/tvDepCurFilter"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recDepPort"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/layFilterDep" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAddDep"
                    style="@style/Widget.Design.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_add_black_24dp"
                    app:elevation="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layShowDepPort"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layShowDepPort" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
